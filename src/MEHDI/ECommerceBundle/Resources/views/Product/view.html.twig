{% extends "::layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.d {
			margin-top: 6px;
		}
	</style>
{% endblock %}

{% block body %}
	<h2>Consulter la fiche d'un produit</h2>
	<div class="well_row">
		<h4 class="text-center" >{{product.libelle}}</h4><hr>
		<div class="col-sm-4">
			<img class="img-responsive img-rounded" src="{{ asset(product.image.webPath) }}" alt="{{ product.image.alt}}"/>
		</div>
		<div class="col-sm-8">
			<form class="form-horizontal">
				<div class="form-group">
					<label class="col-sm-4 control-label" >Description :</label>
					<div class="col-sm-8 d">
						{{ product.description}}
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label" >Quantité :</label>
					<div class="col-sm-8 d">
						{{ product.quantiteRestante}}
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label" >Prix :</label>
					<div class="col-sm-8 d">
						{{ product.prixUnitaire}}
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label" >Catégorie :</label>
					<div class="col-sm-8 d">
						{{ product.category.nom}}
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label" >Date d'ajout :</label>
					<div class="col-sm-8 d">
						{{ product.dateAjout|date("d/m/Y à g:i")}}
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label" >Evaluation :</label>
					<div class="col-sm-8 d">
						{% for i in 1..10%}
							{% if loop.index <= product.evaluation %}
								<i class="glyphicon glyphicon-star"></i>
							{% else %}
								<i class="glyphicon glyphicon-star-empty"></i>
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}